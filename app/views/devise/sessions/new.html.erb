<h2 class="text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),  html: { class: 'form-signin' }) do |f| %>
  <div class="form-label-group">
    <br />
    <%= f.email_field :email, placeholder: "Username", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-label-group">
  <br />
    <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password" %>
  </div>
    <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
    <div style="display: inline-block;">
      <%= f.check_box :remember_me %>
    </div>
    <div style="display: inline-block;">
      <%= f.label :remember_me %>
  </div>

</div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" , class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
<div class="text-center">
<%= render "devise/shared/links" %>
</div>