<h1>Single User Page</h1>
<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% else %>
<div class="user-details">
  <div class="user-header">
    <!-- Display user photo, name, and number of posts -->
    <div class="image-container">
      <%= image_tag @user.photo, width: '100', height: '100', alt: "#{@user.name}'s photo" %>
    </div>
    <div class="user-info">
      <h2><%= @user.name %></h2>
      <p>Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>

  <!-- Display user bio -->
  <div class="bio">
    <p><%= @user.bio %></p>
  </div>

  <!-- Display three most recent posts -->
  <div class="user-posts">
    <% @user.three_most_recent_posts.each do |post| %>
      <div class="post">
        <h3><%= post.title %></h3>
        <p><%= post.text %></p>
        <p>Comments: <%= post.comments_counter %></p>
        <p>Likes: <%= post.likes_counter %></p>
      </div>
    <% end %>
  </div>

  <!-- Button to see all posts -->
 <Button>see all posts</Button>
</div>
<% end %>