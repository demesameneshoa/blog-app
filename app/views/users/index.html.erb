<h1>All Users Page</h1>
<div class="users-container">
  <% @users.each do |user| %>
    <div class="user-card">
      <div class="image-grid">
        <!-- Display user images here -->
        <%= image_tag(user.photo, width: '100', height: '100', alt: "#{user.name}'s photo") %>
      </div>
      <div class="user-details">
        <h2><%= user.name %></h2>
        <p>Number of posts: <%= user.posts_counter %></p>
      </div>
    </div>
  <% end %>
</div>